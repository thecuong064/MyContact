<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_small_ava">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/small_ava"
        android:layout_height="@dimen/small_ava"
        android:layout_marginEnd="@dimen/margin_small_ava"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/male" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="@dimen/text_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_text"
        android:layout_toEndOf="@+id/avatar"
        android:textSize="@dimen/bigtext"
        android:textStyle="bold"
        tools:text="Lai The Cuong"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="@dimen/text_width"
        android:layout_height="wrap_content"
        tools:text="01652874637"
        android:textSize="@dimen/smalltext"
        android:layout_below="@id/fullname"
        android:layout_toEndOf="@id/avatar" />

    <ImageView
        android:id="@+id/mes"
        android:layout_width="@dimen/button"
        android:layout_height="@dimen/button"
        android:layout_toStartOf="@id/call"
        android:layout_alignTop="@id/fullname"
        android:src="@drawable/mes_icon"/>

    <ImageView
        android:id="@+id/call"
        android:layout_width="@dimen/button"
        android:layout_height="@dimen/button"
        android:layout_alignTop="@id/fullname"
        android:src="@drawable/call"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>